@model WebApplication2.Models.EditUserViewModel
@using WebApplication2.Models

@using (Html.BeginForm("EditBook", "Manage", FormMethod.Post, new { id=Model.Id,  @class="form-horizontal", role="form" })) { 
    @Html.AntiForgeryToken()
    @Html.Partial("_ModalHeader", new ModalHeader { Heading = String.Format("{0} Book", Model.Id == 0 ? "Add" : "Edit") })

    <div class="modal-middle">
        <div class="form-group">
            @Html.LabelFor(m => m.Email, new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                @Html.TextBoxFor(m => m.Email, new { @class = "form-control", @readonly = "readonly", @placeholder = Html.DisplayNameFor(n => n.Email) })
                @Html.ValidationMessageFor(m => m.Email, null, new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.UserName, new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                @Html.TextBoxFor(m => m.UserName, new { @class = "form-control", @placeholder = Html.DisplayNameFor(n => n.UserName) })
                @Html.ValidationMessageFor(m => m.UserName, null, new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.FirstName, new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                @Html.TextBoxFor(m => m.FirstName, new { @class = "form-control", @placeholder = Html.DisplayNameFor(n => n.FirstName) })
                @Html.ValidationMessageFor(m => m.FirstName, null, new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.LastName, new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                @Html.TextBoxFor(m => m.LastName, new { @class = "form-control", @placeholder = Html.DisplayNameFor(n => n.LastName) })
                @Html.ValidationMessageFor(m => m.LastName, null, new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Phone, new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                @Html.TextBoxFor(m => m.Phone, new { @class = "form-control", mask = "(999) 999-9999", @placeholder = "(999) 999-9999" })
                @Html.ValidationMessageFor(m => m.Phone, null, new { @class = "text-danger" })
            </div>
        </div>
    </div>

    @Html.Partial("_ModalFooter", new ModalFooter { })
}


<script>
        $(function () {
            $('[mask]').each(function (e) {
                $(this).mask($(this).attr('mask'));
            });
        });
</script>